<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.digital.ayaz.Model.Movie" />

        <variable
            name="genre"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/color_FC0AAB85"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{data.title}"

            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_25"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/movie_poster"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:src="@drawable/poster"
                        app:imageUrl="@{data.posterPath}" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_15"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{@string/rating(data.voteAverage)}"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:textSize="@dimen/text_size_large" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{@string/release_date(data.releaseDate)}"
                            android:textSize="@dimen/text_size_large" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{genre}"
                            android:textStyle="italic"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:lineSpacingExtra="@dimen/dp_1"
                            android:textSize="@dimen/text_size_large" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/movie_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:layout_marginTop="@dimen/layout_padding"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:text="@{data.overview}"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>