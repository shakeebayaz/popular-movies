<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.digital.ayaz.Model.Movie" />
        <variable
            name="clickHandler"
            type="com.digital.ayaz.MovieAdapter.MovieViewHolder" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/movie_item_container"
        style="@style/MovieItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:layout_margin="@dimen/item_spacing_full">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movie_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@color/colorPrimary"
                android:onClick="@{clickHandler.OnPosterClicked}"
                app:imageUrl="@{data.posterPath}"
                           />
            <TextView
                android:id="@+id/movie_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:text="@{data.title}"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>